<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_24"
    android:padding="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:id="@+id/tv_title"
        android:textSize="20sp"
        android:textColor="#F44336"
        android:textFontWeight="1000"
        android:textAllCaps="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Rate App" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:id="@+id/tv_content"
        android:textSize="16sp"
        android:textColor="#383655"
        android:gravity="center"
        android:text="We need your review to improve the application" />

    <com.willy.ratingbar.RotationRatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/rating_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_maybe_later"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:textColor="#F44336"
            android:gravity="center"
            android:text="Maybe Later"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#A3A3A3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rate"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:textColor="#007A05"
            android:gravity="center"
            android:text="Rate"
            />
    </LinearLayout>
</LinearLayout>